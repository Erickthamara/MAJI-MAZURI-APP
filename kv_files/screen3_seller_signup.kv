ScreenManager:
    SignupScreen:
   

<SignupScreen>
    name:"signup"
    MDFloatLayout:
        id:my_layout3
        MDIconButton:
            icon: 'arrow-left-circle'
            user_font_size: '80sp'
            pos_hint: {"center_x": .1, "center_y": .93}
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'login'
            
        MDLabel:
            text:"SELLER SIGN UP"
            font_style:"H4"
            halign:"center"
            pos_hint:{'center_y':0.95}
            theme_text_color:"Custom"
            text_color: 0,0,1,1
        
        MDTextField:
            id: email_signup
            hint_text: 'Enter your email'
            hint_text_color_normal: 0, 0, 0, 1 
            icon_right:"email"
            font_size:"16dp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .85}
            on_text:self.text=self.text.replace(" ","")
            write_tab:False
            on_text:root.validate_email2()
        MDLabel:
            id: email_signup_error
            halign: 'center'
            pos_hint:{'center_y':0.8}
            theme_text_color: 'Error'
            text: ''

        MDTextField:
            id: phone_no
            hint_text: 'Phone Number'
            hint_text_color_normal: 0, 0, 0, 1 
            icon_right:"cellphone-check"
            font_size:"16dp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .75}
            on_text:self.text=self.text.replace(" ","")
            write_tab:False
            on_text:root.validate_phone_no()
        MDLabel:
            id: phone_no_error
            halign: 'center'
            pos_hint:{'center_y':0.7}
            theme_text_color: 'Error'
            text: ''

        MDTextField:
            id: first_name
            hint_text: 'First Name'
            hint_text_color_normal: 0, 0, 0, 1 
            icon_right:"account"
            font_size:"16dp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .65}
            on_text:self.text=self.text.replace(" ","")
            write_tab:False
            on_text:root.validate_first_name()
        MDLabel:
            id: first_name_error
            halign: 'center'
            pos_hint:{'center_y':0.6}
            theme_text_color: 'Error'
            text: ''

        MDTextField:
            id: last_name
            hint_text: 'Last Name'
            hint_text_color_normal: 0, 0, 0, 1 
            icon_right:"account"
            font_size:"16dp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .55}
            on_text:self.text=self.text.replace(" ","")
            write_tab:False
            on_text:root.validate_last_name()
        MDLabel:
            id: last_name_error
            halign: 'center'
            pos_hint:{'center_y':0.5}
            theme_text_color: 'Error'
            text: ''

        MDTextField:
            id:pswd_signup
            hint_text: "Password"
            hint_text_color_normal: 0, 0, 0, 1 
            helper_text: "Minimum of 8 characters"
            helper_text_mode: "on_focus"
            password:True
            icon_right:"eye-off"
            font_size:"16dp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .45}
            on_text:self.text=self.text.replace(" ","")
            write_tab:False
            on_text:root.validate_password2()
            
        MDLabel:
            id: pswd_signup_error
            halign: 'center'
            pos_hint:{'center_y':0.4}
            theme_text_color: 'Error'
            text: ''
        
        MDTextField:
            id: pswd_confirm
            hint_text: "Confirm Password"
            hint_text_color_normal: 0, 0, 0, 1 
            helper_text: "Minimum of 8 characters"
            helper_text_mode: "on_focus"
            password:True
            icon_right:"eye-off"
            font_size:"16dp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .35}
            on_text:self.text=self.text.replace(" ","")
            write_tab:False
            on_text:root.validate_password3()
        MDLabel:
            id: pswd_confirm_error
            halign: 'center'
            pos_hint:{'center_y':0.3}
            theme_text_color: 'Error'
            text: ''

        MDTextField:
            id: national_id
            hint_text: "National ID Number"
            hint_text_color_normal: 0, 0, 0, 1 
            helper_text: "Minimum of 8 characters"
            helper_text_mode: "on_focus"
           # password:True
            icon_right:"eye-off"
            font_size:"16dp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .25}
            on_text:self.text=self.text.replace(" ","")
            write_tab:False
            on_text:root.validate_national_id()
        
        MDLabel:
            id: national_id_error
            halign: 'center'
            pos_hint:{'center_y':0.2}
            theme_text_color: 'Error'
            text: ''

        MDTextField:
            id: shop_name
            hint_text: "Enter your Shop Name"
            hint_text_color_normal: 0, 0, 0, 1 
            #helper_text: "Minimum of 4 characters"
            #helper_text_mode: "on_focus"
            #password:True
            icon_right:"eye-off"
            font_size:"16dp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .15}
            on_text:self.text=self.text.replace(" ","")
            write_tab:False
            on_text:root.validate_shop_name()
        
        MDLabel:
            id: shop_name_error
            halign: 'center'
            pos_hint:{'center_y':0.1}
            theme_text_color: 'Error'
            text: ''

        MDRaisedButton:
            size_hint: .5,.01
            id:submit_button2
            disabled:False
            text:"SUBMIT"
            theme_text_color:"Custom"
            text_color: 0,0,0,1
            pos_hint:{'center_x':0.5, 'center_y':0.05}
            on_press:if root.signup_validate():root.email_dialog()
           


