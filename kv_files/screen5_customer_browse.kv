<ItemCard@MDCard>
    orientation:"vertical"
    size_hint_x:.5
    size_hint_y:None
    height:dp(200)
    #elevation:1
    radius:25
    md_bg_color:  105/255, 84/255, 151/255, 0.8
    on_release:app.root.current_screen.show_example_custom_bottom_sheet(root.image,root.price,root.rating)

    image:""
    price:""
    rating:""

    Image:
        source:root.image
        size_hint: None, None
        size: self.parent.width, self.parent.height * 0.6
        allow_stretch: True
        keep_ratio: False

    BoxLayout:
        pos_hint:{'center_x':0.65}
        MDIcon:
            icon:"star"
            theme_text_color:'Custom'
            text_color:1,1,0,1
            halign:"center"
            size_hint_x:.25
        MDLabel:
            text:root.rating
            halign:"center"
    
    MDLabel:
        pos_hint:{'center_x':0.55}
        text:root.price



