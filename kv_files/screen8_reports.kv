ScreenManager:
    ReportScreen:
    
<ReportScreen>:
    name:"reports"
 
    MDFloatLayout:
        id:reports_layout
        MDIconButton:
            icon: 'arrow-left-circle'
            user_font_size: '80sp'
            pos_hint: {"center_x": .1, "center_y": .95}
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'orders'
        MDLabel:
            text:"Reports"
            theme_text_color:"Custom"
            text_color: 21/255,39/255,112/255,1
            pos_hint: {"center_x": .5, "center_y": .95} 
            halign:"center"
            font_size:"45sp"
            font_style:"H4"
            height:"15dp"
        MDLabel:
            text:"Enter your preferred dates below!"
            theme_text_color:"Custom"
            text_color: 21/255,39/255,112/255,1
            pos_hint: {"center_x": .5, "center_y": .85} 
            halign:"center"
            font_size:"30sp"
            font_style:"H6"
            height:"15dp"
        BoxLayout:
            size_hint:.85,None
            height:"30dp"
            pos_hint: {"center_x": .47, "center_y": .75}
            spacing:"15dp"

            MDTextField:
                id: start_date_field
                mode:"fill"
                hint_text: "Start Date"
                readonly: True
                on_focus: if self.focus: root.show_date_picker("start_date_field")

            MDTextField:
                id: end_date_field
                mode:"fill"
                hint_text: "End Date"
                readonly: True
                on_focus: if self.focus: root.show_date_picker("end_date_field")

        MDLabel:
            text:"Sales Report"
            font_style:"H5"
            halign:"center"
            pos_hint:{'center_y':0.68}
            theme_text_color:"Custom"
            text_color: 0,0,0,1

        BoxLayout:
            size_hint:.85,None
            height:"30dp"
            pos_hint: {"center_x": .47, "center_y": .6}
            spacing:"15dp"

            MDRaisedButton:
                id:dnwld_report
                text:"Download Report"
                disabled:False
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size:"18dp"
                on_press:root.download_sales_report()

            MDRaisedButton:
                id:email_report
                text:"Send Email"
                disabled:False
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size:"18dp"
                on_press:root.send_sales_email()
        MDLabel:
            text:"Customer Report"
            font_style:"H5"
            halign:"center"
            pos_hint:{'center_y':0.5}
            theme_text_color:"Custom"
            text_color: 0,0,0,1

        BoxLayout:
            size_hint:.85,None
            height:"30dp"
            pos_hint: {"center_x": .47, "center_y": .4}
            spacing:"15dp"

            MDRaisedButton:
                id:download_customers
                text:"Download Report"
                disabled:False
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size:"18dp"
                on_press:root.download_customers()

            MDRaisedButton:
                id:email_report
                text:"Send Email"
                disabled:False
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size:"18dp"
                on_press:root.email_customers()
        MDLabel:
            text:"Catalogue Report"
            font_style:"H5"
            halign:"center"
            pos_hint:{'center_y':0.3}
            theme_text_color:"Custom"
            text_color: 0,0,0,1

        BoxLayout:
            size_hint:.85,None
            height:"30dp"
            pos_hint: {"center_x": .47, "center_y": .2}
            spacing:"15dp"

            MDRaisedButton:
                id:dnwld_report
                text:"Download Report"
                disabled:False
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size:"18dp"
                on_press:root.download_catalogue()

            MDRaisedButton:
                id:email_report
                text:"Send Email"
                disabled:False
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size:"18dp"
                on_press:root.catalogue_email()
                   

       
       
        