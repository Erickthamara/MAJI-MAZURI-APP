ScreenManager:
    ReportScreen:
    
<ReportScreen>:
    name:"reports"
 
    MDFloatLayout:
        id:reports_layout
        MDIconButton:
            icon: 'arrow-left-circle'
            user_font_size: '80sp'
            pos_hint: {"center_x": .1, "center_y": .88}
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'orders'
        MDLabel:
            text:"Reports"
            theme_text_color:"Custom"
            text_color: 21/255,39/255,112/255,1
            pos_hint: {"center_x": .5, "center_y": .95} 
            halign:"center"
            font_size:"45sp"
            font_style:"H4"
            height:"15dp"

        BoxLayout:
            size_hint:.85,None
            height:"30dp"
            pos_hint: {"center_x": .47, "center_y": .18}
            spacing:"15dp"

            MDRaisedButton:
                id:dnwld_report
                text:"Download Report"
                disabled:False
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size:"18dp"
                on_press:root.download_report()

            MDRaisedButton:
                id:email_report
                text:"Send Email"
                disabled:False
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size:"18dp"
                on_press:root.send_email()
                   

       
       
        