<SalesContent>:
    name:"sales_content"
    MDFloatLayout:


        id:sales_layout

        
        MDLabel:
            text:"SALES ENTRY"
            theme_text_color:"Custom"
            text_color: 21/255,39/255,112/255,1
            pos_hint: {"center_x": .5, "center_y": .95} 
            halign:"center"
            font_size:"45sp"
            font_style:"H4"
            height:"15dp"
        BoxLayout:
            size_hint:.9,None
            height:"30dp"
            pos_hint: {"center_x": .5, "center_y": .8}
            spacing:"15dp"
            

            MDTextField:
                id:sales_entry
                mode:"fill"
                hint_text:"Enter Sale"
                size_hint_x: 1
                
                font_size:"18dp"
                on_text:root.sales_input_check()
                
            MDRaisedButton:
                id:submit_sales
                text:"Submit"
                disabled:False
                size_hint_x: 1
                pos_hint: {"center_x": .5, "center_y": .9}
                font_size:"18dp"
                on_press: root.input_sales()
        
        MDRaisedButton:
            id:sales_graph
            text:"Generate Graph"
            disabled:False
            size_hint_x: .5
            pos_hint: {"center_x": .5, "center_y": .06}
            font_size:"18dp"
            on_press: root.report_test()
